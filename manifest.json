{
	"manifest_version": 2,
	"name": "Pragmatists AngularJS-toolbox",
	"description": "A toolbox for work with AngularJS",
	"version": "1.0",
	"permissions": [
		"storage"
	],
	"icons": { 
		"16": "img/logo16.png",
		"48": "img/logo48.png",
		"128": "img/logo128.png"
	},
	"browser_action": {
		"default_icon": {                    
			"19": "img/logo48.png",
			"38": "img/logo48.png"
		},
		"default_popup": "popup.html"
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"img/icon128.png"
	]
}
